{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
    "module": "es2015",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "./node_modules/@altv/types",
      "./node_modules/@altv/native-types"
    ]
  },
  "include": [
    "./src/client/client.ts",
    "./src/server/server.ts"
  ]
}
